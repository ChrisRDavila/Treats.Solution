@{
  Layout = "_Layout";
}

@model PTreats.Models.Treat

<h2>Assign Flavor</h2>

<h4>Add a flavor for this treat:<span style="color: red" > @Html.DisplayFor(model => model.Description)</span></h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>