@{
  Layout = "_Layout";
}

@using PTreats.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>Lets add some flavor for this account!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
}
<hr>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("See Treats List", "Index", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>